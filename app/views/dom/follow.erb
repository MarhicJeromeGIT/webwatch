<h1>URL: <%= @url %></h1>
<br>

<%= form_tag 'follow', method: :get do %>
  <%= text_field_tag :url %>
  <%= submit_tag 'ok' %>
<% end %>

<div id='followed-page' >
  <%=raw @html %>
</div>

<%= form_tag( follow_confirmation_path, method: "get") do %>
  <%= hidden_field_tag :selector, '' %>
  <%= hidden_field_tag :url, @url %>
  <%= submit_tag %>
<% end %>